@model IEnumerable<EmployeeIndexViewModel>

@{ ViewBag.Title = "Employee";}

<div class="page-wrapper">
    <div class="container-fluid">

        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h4 class="text-themecolor">Employee Page</h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                    
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                       
                            <div class="col-md-12 table-responsive-md">
                                <a class="btn btn-xl btn-outline-success float-md-right" asp-action="Create"><i class="fa fa-plus-circle"></i>Add New Employee</a>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Employee No.</th>
                                            <th>Photo</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>Designation</th>
                                            <th>City</th>
                                            <th>Joined</th>
                                            <th class="text-warning">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-action="Detail" asp-route-id="@item.ID">
                                                        @item.EmployeeNo
                                                    </a>
                                                </td>
                                                <td><img  class="rounded-circle shadow-lg" alt="image" src="@Url.Content(item.ImageUrl)" style="width:50px; height:50px;" /></td>
                                                <td>@item.FullName</td>
                                                <td>@item.Gender</td>
                                                <td>@item.Designation</td>
                                                <td>@item.City</td>
                                                <td>@item.DateJoined.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.ID">
                                                        <i class="fas fa-edit"></i>Edit
                                                    </a>
                                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.ID">
                                                        <i class="fas fa-bars"></i>Detail
                                                    </a>
                                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.ID">
                                                        <i class="fas fa-trash-alt"></i>Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>




