@model EmployeeDeleteViewModel

<div class="page-wrapper">
    <div class="container-fluid">

        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h4 class="text-themecolor">Employee Page</h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete Employee</li>
                    </ol>

                </div>
            </div>
        </div>
        <h2 style="color:red">Are you sure you want to delete this employee ?</h2>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" asp-action="Delete">
                            <div class="form-group">
                                <input asp-for="FullName" class="form-control font-weight-bold" readonly style="background-color:#697eb9" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="far fa-plus-square" style="margin-right: 0.7em"></i>Delete</button>
                                <a asp-action="Index" class="btn btn-rounded btn-primary float-right"><i class="fas fa-caret-square-left" style="margin-right: 0.7em"></i>Back</a>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>





    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}